---
import Layout from "../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import urkel from "@/assets/urkel.gif";
---

<Layout>
  <div class="flex-1 flex flex-col gap-4 justify-center items-center">
    <h1 class="text-4xl font-bold">Oops!</h1>
    <Image src={urkel} alt="404" width={500} height={500} />
    <p class="text-2xl">The page you are looking for does not exist.</p>
    <a href="/" class="text-blue-400 underline">Head back to the home page</a>
  </div>
</Layout>
